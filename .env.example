# Twitter Authentication
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Monitoring Configuration
TARGET_USERNAME=target_twitter_username
CHECK_INTERVAL=30000

# Optional: Keywords to watch for
WATCH_KEYWORDS=pump,launch,token,contract,mint,deploying,live

# Optional: Webhook URL for notifications
WEBHOOK_URL=

# Wallet Configuration
# Solana wallet private key (base58 encoded)
SOLANA_PRIVATE_KEY=your_solana_private_key_base58

# BSC wallet private key (hex format, with or without 0x prefix)
BSC_PRIVATE_KEY=your_bsc_private_key_hex

# RPC URLs (optional, defaults provided)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Auto-buy settings
AUTO_BUY_ENABLED=true
MAX_BUY_AMOUNT_SOL=10
MAX_BUY_AMOUNT_BNB=5