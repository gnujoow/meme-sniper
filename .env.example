# Twitter Authentication (Real Twitter Account Required)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# Monitoring Configuration
TARGET_USERNAME=target_twitter_username
CHECK_INTERVAL=30000

# Optional: Keywords to watch for
WATCH_KEYWORDS=pump,launch,token,contract,mint,deploying,live

# Optional: Webhook URL for notifications
WEBHOOK_URL=

# Wallet Configuration (Using Separate Mnemonics)
# Solana wallet mnemonic (from Phantom wallet)
SOLANA_MNEMONIC=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12

# BSC wallet mnemonic (from MetaMask wallet)
BSC_MNEMONIC=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12

# Derivation paths (optional, uses defaults if not specified)
SOLANA_DERIVATION_PATH=m/44'/501'/0'/0'
BSC_DERIVATION_PATH=m/44'/60'/0'/0/0

# RPC URLs (optional, defaults provided)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Auto-buy settings
AUTO_BUY_ENABLED=true
MAX_BUY_AMOUNT_SOL=10
MAX_BUY_AMOUNT_BNB=5